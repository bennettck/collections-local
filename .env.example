# Observability Provider Selection
# Set to "langfuse" or "langsmith" to choose which tool to use for prompts and tracing
OBSERVABILITY_PROVIDER=langfuse

# API Keys
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...

# Langfuse Configuration (used when OBSERVABILITY_PROVIDER=langfuse)
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_HOST=https://cloud.langfuse.com

# LangSmith Configuration (used when OBSERVABILITY_PROVIDER=langsmith)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=ls__...
LANGCHAIN_PROJECT=collections-local
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# Storage paths
DATABASE_PATH=./data/collections.db
IMAGES_PATH=./data/images
