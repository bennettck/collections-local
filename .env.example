# API Keys
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...

# LangSmith Configuration (Observability & Prompt Management)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=ls__...
LANGCHAIN_PROJECT=collections-local
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_PROMPT_NAME=collections-app-initial

# Storage paths
IMAGES_PATH=./data/images

# PostgreSQL Database (required)
DATABASE_URL=postgresql://user:password@localhost:5432/collections
# Or use AWS Secrets Manager: DB_SECRET_ARN=arn:aws:secretsmanager:...
# Or use AWS Parameter Store: PARAMETER_STORE_DB_URL=/path/to/param

# VoyageAI API (for embeddings)
VOYAGE_API_KEY=pa-...

# Document chunking (ENABLED by default)
ENABLE_DOCUMENT_CHUNKING=true
MAX_CHUNK_SIZE=2000  # Large enough for typical responses
CHUNK_OVERLAP=200
USE_JSON_SPLITTER=true  # Use RecursiveJsonSplitter first
