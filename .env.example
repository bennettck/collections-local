# API Keys
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...

# LangSmith Configuration (Observability & Prompt Management)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=ls__...
LANGCHAIN_PROJECT=collections-local
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_PROMPT_NAME=collections-app-initial

# Storage paths
PROD_DATABASE_PATH=./data/collections.db
GOLDEN_DATABASE_PATH=./data/collections_golden.db
IMAGES_PATH=./data/images

# VoyageAI API (for embeddings)
VOYAGE_API_KEY=pa-...

# LangChain RAG Pipeline Configuration
# Chroma directories for both databases
CHROMA_PROD_PERSIST_DIRECTORY=./data/chroma_prod
CHROMA_GOLDEN_PERSIST_DIRECTORY=./data/chroma_golden

# Document chunking (ENABLED by default)
ENABLE_DOCUMENT_CHUNKING=true
MAX_CHUNK_SIZE=2000  # Large enough for typical responses
CHUNK_OVERLAP=200
USE_JSON_SPLITTER=true  # Use RecursiveJsonSplitter first
